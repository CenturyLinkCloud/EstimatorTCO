              %option{value: "windows"} Windows
              %option{value: "redhat"} Red Hat
          %td 
            %input.number{name: "storage"}
            (GB)
          %td 
            %input.number{name: "bandwidth"}
            (GB)
          %td
            %select{name: "snapshots"}
              %option 1
              %option 2
              %option 3
              %option 4
              %option 5
          %td 
            %input{type: "checkbox", name: "matchCPU"}
          %td 
            %input{type: "checkbox", name: "matchIOPS"}
          %td 
            %input.number{name: "iops"}
          %td
            0
      .additional-features
