%section#input-panel.green-section
  .container
    %form
      .platform-select
        %label{for: ""} Platform / Host
        %select{id: "", name: "platform"}
          %option{value: "aws"} AWS
          %option{value: "google"} Google
      .actions
        %a.btn.share-btn{href: "#"} Share
        %a.btn.reset-btn{href: "#"} Reset
      %table.main-features
